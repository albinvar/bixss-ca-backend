# MongoDB Configuration
MONGO_VERSION=7.0
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=admin123
MONGO_DATABASE=ca_management
MONGO_PORT=27017

# Backend Configuration
BACKEND_PORT=3001
NODE_ENV=production

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# Frontend Configuration
FRONTEND_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:3001

# Storage Configuration
# Set to 'local' for development, 's3' for production with DigitalOcean Spaces
STORAGE_TYPE=local
LOCAL_UPLOAD_PATH=./uploads

# DigitalOcean Spaces Configuration (S3-compatible)
# Only needed if STORAGE_TYPE=s3
# You can also use AWS S3 by setting the appropriate region and removing the endpoint
AWS_S3_BUCKET_NAME=your-bucket-name
AWS_S3_REGION=blr1
AWS_S3_ENDPOINT=https://blr1.digitaloceanspaces.com
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
